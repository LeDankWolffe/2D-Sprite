//Exercise 02
//create a sprite using Atom

//Initialization function
function setup(){
  createCanvas(480,480)
  noLoop()
  stroke(0)
}

function draw(){
  background(255)

// Row 1
  fill(255)
  rect(0, 0, 40, 40)
  rect(40, 0, 40, 40)
  rect(80, 0, 40, 40)
  rect(120, 0, 40, 40)

  fill(255,0,0);
  rect(160, 0, 40, 40)
  rect(200, 0, 40, 40)

  fill(255)
  rect(240, 0, 40, 40)

  fill(255,0,0)
  rect(280, 0, 40, 40)
  rect(320, 0, 40, 40)

  fill(255);
  rect(360, 0, 40, 40)
  rect(400, 0, 40, 40)

  // Row 2
    fill(255)
    rect(0, 40, 40, 40)
    rect(40, 40, 80, 40)
    rect(80, 40, 120, 40)

    fill(255,0,0)
    rect(120, 40, 160, 40)
    rect(160, 40, 200, 40)
    rect(200, 40, 240, 40)
    rect(240, 40, 280, 40)
    rect(280, 40, 320, 40)
    rect(320, 40, 360, 40)
    rect(360, 40, 400, 40)

    fill(255)
    rect(400, 40, 440, 40)

    // Row 3
      fill(255)
      rect(0, 80, 40, 40)
      rect(40, 80, 40, 40)
      rect(80, 80, 40, 40)

      fill(255,0,0)
      rect(120, 80, 40, 40)
      rect(160, 80, 40, 40)
      rect(200, 80, 40, 40)
      rect(240, 80, 40, 40)
      rect(280, 80, 40, 40)
      rect(320, 80, 40, 40)
      rect(360, 80, 40, 40)

      fill(255)
      rect(400, 80, 40, 40)

      // Row 4
        fill(255)
        rect(0, 120, 40, 40)
        rect(40, 120, 40, 40)
        rect(80, 120, 40, 40)
        rect(120, 120, 40, 40)

        fill(255,0,0)
        rect(160, 120, 40, 40)
        rect(200, 120, 40, 40)
        rect(240, 120, 40, 40)
        rect(280, 120, 40, 40)
        rect(320, 120, 40, 40)

        fill(255)
        rect(360, 120, 40, 40)
        rect(400, 120, 40, 40)

        // Row 5
          fill(255)
          rect(0, 160, 40, 40)
          rect(40, 160, 40, 40)
          rect(80, 160, 40, 40)
          rect(120, 160, 40, 40)
          rect(160, 160, 40, 40)

          fill(255,0,0)
          rect(200, 160, 40, 40)
          rect(240, 160, 40, 40)
          rect(280, 160, 40, 40)

          fill(255)
          rect(320, 160, 40, 40)
          rect(360, 160, 40, 40)
          rect(400, 160, 40, 40)

          // Row 6
            fill(255)
            rect(0, 200, 40, 40)
            rect(40, 200, 40, 40)
            rect(80, 200, 40, 40)
            rect(120, 200, 40, 40)
            rect(160, 200, 40, 40)
            rect(200, 200, 40, 40)

            fill(255,0,0)
            rect(240, 200, 40, 40)

            fill(255)
            rect(280, 200, 40, 40)
            rect(320, 200, 40, 40)
            rect(360, 200, 40, 40)
            rect(400, 200, 40, 40)

            // Row 7
              fill(255)
              rect(0, 240, 40, 40)
              rect(40, 240, 40, 40)
              rect(80, 240, 40, 40)
              rect(120, 240, 40, 40)
              rect(160, 240, 40, 40)
              rect(200, 240, 40, 40)
              rect(240, 240, 40, 40)
              rect(280, 240, 40, 40)
              rect(320, 240, 40, 40)
              rect(360, 240, 40, 40)
              rect(400, 240, 40, 40)
